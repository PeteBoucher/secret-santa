%h2 Profile for #{@group.name}

%ul#details
  %li
    Name:
    = @group.name
  %li
    Company:
    = @group.organisation
  %li
    Spending upper limit:
    = @group.max_spend
  %li
    Spending lower limit:
    = @group.min_spend

%h2
  = @group.members.count
  Members
%table
  %tr
    %th
      Name

    %th
      Email

  - @group.members.each do |member|
    %tr
      %td
        = member.name

      %td
        = member.email


= link_to 'Back to group list', groups_path
