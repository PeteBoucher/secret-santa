-#  This file is app/views/groups/index.html.haml
%h1 All Groups

%table#groups
  %thead
    %tr
      %th Group Name
      %th Organisation Name
      %th More Info
  %tbody
    - @groups.each do |group|
      %tr
        %td= group.name
        %td= group.organisation
        %td= link_to "More about #{group.name}", group_path(group)

= link_to 'Create group', new_group_path